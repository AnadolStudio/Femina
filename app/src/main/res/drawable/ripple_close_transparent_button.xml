<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/white" android:state_checked="false">
        <ripple android:color="@color/light_gray">
            <item>
                <shape android:shape="oval" android:tint="@color/white" />
            </item>
        </ripple>
    </item>
    <item android:color="@color/light_gray" android:state_checked="true">
        <ripple android:color="@color/light_gray">
            <item>
                <shape android:shape="oval" android:tint="@color/light_gray" />
            </item>
        </ripple>
    </item>
</selector>
